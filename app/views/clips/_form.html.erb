<div>
  <button id="set-start-time" type="button">開始時間</button>
  <button id="set-end-time" type="button">終了時間</button>

  <%= form_with(model: [video, Clip.new], id: "clip-form", remote: true, data: { video_id: video.id }) do |f| %>
    <div id="clip-errors"></div>
  
    <%= f.label :start_time, "開始時間" %>
    <%= f.text_field :start_time, id: "clip_start_time", required: true, type: "text" %>
  
    <%= f.label :end_time, "終了時間" %>
    <%= f.text_field :end_time, id: "clip_end_time", required: true, type: "text" %>

    <br>

    <%= f.label :title, "クリップタイトル" %>
    <%= f.text_field :title, id: "clip_title", type: "text" %>

    <br>
  
    <%= f.submit "クリップを保存" %>
  <% end %>
  
</div>
