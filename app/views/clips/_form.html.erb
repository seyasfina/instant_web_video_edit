<div class="flex flex-col gap-5">
  <%= form_with(model: [video, Clip.new], id: "clip-form", remote: true, data: { video_id: video.id }, class: "space-y-4") do |f| %>
    <div id="clip-errors" class="space-y-1 text-sm text-error" role="alert"></div>

    <div class="grid gap-2 sm:grid-cols-2 sm:gap-3 sm:items-center">
      <button id="set-start-time" type="button" class="btn btn-outline btn-sm h-11 min-h-0 w-full justify-center whitespace-nowrap px-4 text-sm font-medium text-base-content sm:px-5">開始位置に設定</button>
      <button id="set-end-time" type="button" class="btn btn-outline btn-sm h-11 min-h-0 w-full justify-center whitespace-nowrap px-4 text-sm font-medium text-base-content sm:px-5">終了位置に設定</button>
    </div>

    <div class="grid gap-3 sm:grid-cols-2 sm:gap-4">
      <div class="form-control">
        <label class="label" for="clip_start_time">
          <span class="label-text">開始時間</span>
          <span class="label-text-alt text-xs text-base-content/60">mm:ss.ss</span>
        </label>
        <%= f.text_field :start_time, id: "clip_start_time", required: true, type: "text", placeholder: "00:00.00", class: "input input-bordered w-full text-right font-mono tabular-nums" %>
      </div>
      <div class="form-control">
        <label class="label" for="clip_end_time">
          <span class="label-text">終了時間</span>
          <span class="label-text-alt text-xs text-base-content/60">mm:ss.ss</span>
        </label>
        <%= f.text_field :end_time, id: "clip_end_time", required: true, type: "text", placeholder: "00:30.00", class: "input input-bordered w-full text-right font-mono tabular-nums" %>
      </div>
    </div>

    <div class="form-control">
      <label class="label" for="clip_title">
        <span class="label-text">クリップタイトル</span>
        <span class="label-text-alt text-xs text-base-content/60">任意</span>
      </label>
      <%= f.text_field :title, id: "clip_title", type: "text", class: "input input-bordered w-full", placeholder: "オープニングのハイライト" %>
    </div>

    <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
      <p class="text-xs text-base-content/60">時刻は 00:00.00 / 00:00:00.00 形式で入力できます。</p>
      <%= f.submit "クリップを保存", class: "btn btn-primary h-12 min-h-0 w-full sm:w-auto" %>
    </div>
  <% end %>
</div>
