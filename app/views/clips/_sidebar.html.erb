<div id="clip-list">
  <% clips.each do |clip| %>
    <div data-clip-id="<%= clip.id %>">
      <p><%= clip.title %></p>
      <p>
        Start:
        <span class="play-clip start-clip" data-start="<%= clip.start_time %>" data-end="<%= clip.end_time %>">
          <%= clip.seconds_to_hms(clip.start_time) %>
        </span>
      </p>
      <p>
        End:
        <span class="play-clip" data-start="<%= clip.start_time %>" data-end="<%= clip.end_time %>">
          <%= clip.seconds_to_hms(clip.end_time) %>
        </span>
      </p>
      <div>
        <button class="play-clip start-clip" data-start="<%= clip.start_time %>" data-end="<%= clip.end_time %>">再生</button>
        <button class="delete-clip">削除</button>
        <button class="edit-clip">編集</button>
        <button class="loop-btn" type="button">ループ</button>
      </div>
    </div>
  <% end %>
</div>
