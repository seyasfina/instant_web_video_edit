<%= render "devise/shared/auth_wrapper",
           title: "確認メールを再送",
           subtitle: "確認メールが届いていない場合は、こちらから再送できます。" do %>
  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
    <div class="flex flex-col gap-2">
      <%= f.label :email, "Eメール", class: "text-sm font-semibold text-base-content" %>
      <%= f.email_field :email,
                        autofocus: true,
                        autocomplete: "email",
                        value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
                        class: "input input-bordered w-full rounded-2xl border-base-200 bg-base-100" %>
    </div>

    <div class="pt-2">
      <%= f.submit "確認メールを送信", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
<% end %>
