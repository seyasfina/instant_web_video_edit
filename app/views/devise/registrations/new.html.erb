<div class="container">
  <div class="signup-signin-page">
    <div class="signup-signin-box">
      <h2 class="signup-signin-word">サインアップ</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: { class: "signup-signin-form" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :name, "ユーザー名", class: "label" %><br />
          <%= f.text_field :name, class: "field", autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :email, "Eメール", class: "label" %><br />
          <%= f.email_field :email, class: "field", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード#{"(#{@minimum_password_length}文字以上)" if @minimum_password_length}", class: "label" %><br />
          <%= f.password_field :password, class: "field", autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "パスワード(再入力)", class: "label" %><br />
          <%= f.password_field :password_confirmation, class: "field", autocomplete: "new-password" %>
        </div>

        <div class="form-submit">
          <%= f.submit "サインアップ", class: "submit" %>
        </div>
      <% end %>
    </div>
  </div>
</div>  

<%#= render "devise/shared/links" %>
