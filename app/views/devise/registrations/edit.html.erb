<%= render "devise/shared/auth_wrapper",
           title: "アカウント情報の編集",
           subtitle: "プロフィールやパスワードを最新の状態に更新しましょう。",
           max_width_class: "max-w-2xl" do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
    <div class="grid gap-4 sm:grid-cols-2">
      <div class="flex flex-col gap-2">
        <%= f.label :name, "ユーザー名", class: "text-sm font-semibold text-base-content" %>
        <%= f.text_field :name, autofocus: true, class: "input input-bordered w-full rounded-2xl border-base-200 bg-base-100" %>
      </div>
      <div class="flex flex-col gap-2">
        <%= f.label :email, "Eメール", class: "text-sm font-semibold text-base-content" %>
        <%= f.email_field :email, autocomplete: "email", class: "input input-bordered w-full rounded-2xl border-base-200 bg-base-100" %>
      </div>
    </div>

    <% unless resource.provider.present? %>
      <div class="grid gap-4 sm:grid-cols-2">
        <div class="flex flex-col gap-2">
          <%= f.label :password, "新しいパスワード#{" (#{@minimum_password_length}文字以上)" if @minimum_password_length}", class: "text-sm font-semibold text-base-content" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full rounded-2xl border-base-200 bg-base-100" %>
        </div>
        <div class="flex flex-col gap-2">
          <%= f.label :password_confirmation, "新しいパスワード (再入力)", class: "text-sm font-semibold text-base-content" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full rounded-2xl border-base-200 bg-base-100" %>
        </div>
        <div class="flex flex-col gap-2 sm:col-span-2">
          <%= f.label :current_password, "現在のパスワード", class: "text-sm font-semibold text-base-content" %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "input input-bordered w-full rounded-2xl border-base-200 bg-base-100" %>
          <p class="text-xs text-base-content/60">変更を保存するには現在のパスワードが必要です。</p>
        </div>
      </div>
    <% end %>

    <div class="flex flex-col gap-3 sm:flex-row sm:justify-end">
      <%= f.submit "変更を保存", class: "btn btn-primary w-full sm:w-auto" %>
    </div>
  <% end %>

  <div class="flex flex-col gap-4 rounded-2xl border border-error/30 bg-error/5 px-4 py-5 text-sm text-base-content/70">
    <p class="font-semibold text-error">アカウントの削除</p>
    <p>アカウントを削除すると、保存されたクリップや履歴がすべて失われます。この操作は取り消せません。</p>
    <%= button_to "アカウントを削除する", registration_path(resource_name),
                  method: :delete,
                  data: { confirm: "本当に削除しますか？" },
                  class: "btn btn-outline btn-sm w-full sm:w-auto" %>
    <%= link_to "前のページに戻る", request.referer || root_path, class: "text-xs text-base-content/60 hover:text-base-content" %>
  </div>
<% end %>
