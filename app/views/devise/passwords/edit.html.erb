<%= render "devise/shared/auth_wrapper",
           title: "パスワードの再設定",
           subtitle: "新しいパスワードを入力して変更を完了させてください。" do %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="flex flex-col gap-2">
      <%= f.label :password, "新しいパスワード#{" (#{@minimum_password_length}文字以上)" if @minimum_password_length}", class: "text-sm font-semibold text-base-content" %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input input-bordered w-full rounded-2xl border-base-200 bg-base-100" %>
    </div>

    <div class="flex flex-col gap-2">
      <%= f.label :password_confirmation, "新しいパスワード (再入力)", class: "text-sm font-semibold text-base-content" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full rounded-2xl border-base-200 bg-base-100" %>
    </div>

    <div class="pt-2">
      <%= f.submit "パスワードを変更", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
<% end %>
