<%= render "devise/shared/auth_wrapper",
           title: "パスワード再設定",
           subtitle: "登録したメールアドレス宛に再設定用リンクをお送りします。" do %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
    <div class="flex flex-col gap-2">
      <%= f.label :email, "Eメール", class: "text-sm font-semibold text-base-content" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full rounded-2xl border-base-200 bg-base-100" %>
    </div>

    <div class="pt-2">
      <%= f.submit "再設定メールを送信", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
<% end %>
