<% links = [] %>

<% if controller_name != 'sessions' %>
  <% links << link_to('ログインはこちら', new_session_path(resource_name), class: 'text-primary hover:underline') %>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <% links << link_to('アカウントを新規作成', new_registration_path(resource_name), class: 'text-primary hover:underline') %>
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <% links << link_to('パスワードをお忘れですか？', new_password_path(resource_name), class: 'text-primary hover:underline') %>
<% end %>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <% links << link_to('確認メールを再送する', new_confirmation_path(resource_name), class: 'text-primary hover:underline') %>
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <% links << link_to('ロック解除メールを再送する', new_unlock_path(resource_name), class: 'text-primary hover:underline') %>
<% end %>

<% if links.any? %>
  <nav class="mt-6 border-t border-base-200/70 pt-4">
    <ul class="space-y-2 text-sm text-base-content/70">
      <% links.each do |link| %>
        <li><%= link %></li>
      <% end %>
    </ul>
  </nav>
<% end %>
