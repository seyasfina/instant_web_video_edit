<div class="container">
  <div class="signup-signin-page">
    <h2>サインイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name),html: { class: "signup-signin-form" }) do |f| %>
      <div>
        <%= f.label :email, "Eメール" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div>
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン状態を保持する" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "ログイン" %>
      </div>
    <% end %>

    <%- if devise_mapping.omniauthable? %>
      <%= button_to 'Sign in with Google', user_google_oauth2_omniauth_authorize_path %>
      <% end %>
  </div>
</div>

<%#= render "devise/shared/links" %>
