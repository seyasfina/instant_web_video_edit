<%= render "devise/shared/auth_wrapper",
           title: "ログイン",
           subtitle: "登録済みアカウントでサインインして、続きから編集できます。" do %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <div class="flex flex-col gap-2">
      <%= f.label :email, "メールアドレス", class: "text-sm font-semibold text-base-content" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full rounded-2xl border-base-200 bg-base-100" %>
    </div>

    <div class="flex flex-col gap-2">
      <%= f.label :password, "パスワード", class: "text-sm font-semibold text-base-content" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full rounded-2xl border-base-200 bg-base-100" %>
    </div>

    <div class="pt-2">
      <%= f.submit "ログイン", class: "btn btn-primary w-full" %>
    </div>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <div class="flex flex-col gap-3 border-t border-base-200/70 pt-4 text-sm text-base-content/70">
      <p class="text-center">または SNS を利用</p>
      <%= button_to user_google_oauth2_omniauth_authorize_path,
                    method: :post,
                    class: "btn btn-outline w-full" do %>
        <span class="mr-2">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" class="h-5 w-5">
            <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z" />
            <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z" />
            <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z" />
            <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z" />
          </svg>
        </span>
        Googleでログイン
      <% end %>
    </div>
  <% end %>
<% end %>
