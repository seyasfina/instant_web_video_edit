<header class="header">
  <div class="header_left">
    <%= link_to 'IWeVE', root_path, class: "header_link_button" %>
  </div>

  <div class="header_center">
    <%= search_form_for @q, url: videos_path, method: :get, html: { class: "header_center_form" } do |f| %>
      <div data-controller="autocomplete" data-autocomplete-url-value="<%= autocomplete_videos_path %>" role="combobox">
      <%= f.search_field :title_cont, placeholder: "キーワード", data: { autocomplete_target: 'input' }, class: "border rounded px-2 py-1" %>
      <%= f.hidden_field :title, data: { autocomplete_target: 'hidden' } %>
      <ul class="list-group" data-autocomplete-target="results"></ul>
      </div>
      <div>
      <%= f.submit "検索" %>
      </div>
    <% end %>
  </div>

  <div class="header_right">
    <% if user_signed_in? %>
      <%= link_to 'マイページ', user_path(current_user), class: "header_link_button" %>
      <%= link_to 'ログアウト', destroy_user_session_path, class: "header_link_button", method: :delete %>
    <% else %>
      <%= link_to 'サインアップ', new_user_registration_path, class: "header_link_button" %>
      <%= link_to 'サインイン', new_user_session_path, class: "header_link_button" %>
    <% end %>
  </div>
</header>
