<header class="flex items-center justify-between bg-gray-100 p-2">
  <div class="flex-none">
    <%= link_to 'IWeVE', root_path, class: "font-bold text-gray-800" %>
  </div>

  <div class="flex-1 text-center">
    <%= search_form_for @q, url: videos_path, method: :get, html: { class: "inline-flex space-x-2" } do |f| %>
      <div data-controller="autocomplete" data-autocomplete-url-value="<%= autocomplete_videos_path %>" role="combobox">
      <%= f.search_field :title_cont, placeholder: "キーワード", data: { autocomplete_target: 'input' }, class: "border rounded px-2 py-1" %>
      <%= f.hidden_field :title, data: { autocomplete_target: 'hidden' } %>
      <ul class="list-group" data-autocomplete-target="results"></ul>
      </div>
      <%= f.submit "検索", class: "bg-blue-500 text-white rounded px-3 py-1" %>
    <% end %>
  </div>

  <div class="flex-none space-x-2">
    <% if user_signed_in? %>
      <%= link_to 'マイページ', user_path(current_user), class: "text-blue-600 hover:underline" %>
      <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "text-blue-600 hover:underline" %>
    <% else %>
      <%= link_to 'サインアップ', new_user_registration_path, class: "text-blue-600 hover:underline" %>
      <%= link_to 'サインイン', new_user_session_path, class: "text-blue-600 hover:underline" %>
    <% end %>
  </div>
</header>
